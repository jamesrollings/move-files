{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "extends": "@tsconfig/recommended/tsconfig.json"
  }